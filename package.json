{
  "private": true,
  "author": "Nam Nguyen <nam.nguyen.node@gmail.com>",
  "license": "MIT",
  "repository": "willnguyen1312/headlessplayback",
  "homepage": "https://github.com/sponsors/willnguyen1312",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/willnguyen1312"
  },
  "keywords": [
    "javascript",
    "typescript",
    "video",
    "audio",
    "playback",
    "headless",
    "mobile",
    "desktop"
  ],
  "scripts": {
    "build:docs": "turbo build --filter=docs... --force",
    "build": "turbo build --filter=!docs",
    "changeset": "changeset",
    "check": "turbo run build typecheck lint test --filter=!docs",
    "clean": "turbo clean && rm -rf node_modules",
    "core": "pnpm --filter=@headlessplayback/core",
    "format:check": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "lint": "turbo lint",
    "postbuild": "pnpm run size",
    "react": "pnpm --filter=@headlessplayback/react",
    "release": "pnpm check && changeset version && changeset publish",
    "size": "esno scripts/size.ts",
    "start-docs": "turbo dev --filter=docs...",
    "start-preact": "turbo dev --filter=with-preact...",
    "start-angular": "turbo run dev --filter=with-angular...",
    "start-qwik": "turbo dev --filter=with-qwik...",
    "start-react": "turbo dev --filter=with-react...",
    "start-solid": "turbo dev --filter=with-solid...",
    "start-svelte": "turbo dev --filter=with-svelte...",
    "start-vanilla": "turbo dev --filter=with-vanilla...",
    "start-vue": "turbo dev --filter=with-vue...",
    "turbo:update": "pnpx @turbo/codemod update",
    "typecheck": "turbo run typecheck"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "eslint": "^8.47.0",
    "eslint-config-custom": "workspace:*",
    "esno": "^0.17.0",
    "export-size": "^0.5.2",
    "prettier": "^3.0.1",
    "prettier-plugin-svelte": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.2",
    "turbo": "^1.10.12",
    "unocss": "^0.55.0"
  }
}
