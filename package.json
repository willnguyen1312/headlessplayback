{
  "private": true,
  "author": "Nam Nguyen <nam.nguyen.node@gmail.com>",
  "license": "MIT",
  "repository": "willnguyen1312/headlessplayback",
  "homepage": "https://github.com/sponsors/willnguyen1312",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/willnguyen1312"
  },
  "keywords": [
    "javascript",
    "typescript",
    "video",
    "audio",
    "playback",
    "headless",
    "mobile",
    "desktop"
  ],
  "scripts": {
    "build:docs": "turbo build --filter=docs... --force",
    "build": "turbo build",
    "changeset": "changeset",
    "check": "turbo run build typecheck lint test --filter=!docs",
    "clean": "turbo clean && rm -rf node_modules",
    "core": "pnpm --filter=@headlessplayback/core",
    "e2e-react": "FRAMEWORK=react playwright test",
    "format:check": "prettier --check ./**/*.{js,ts,tsx,mjs,json,vue,svelte}",
    "format:fix": "prettier --write ./**/*.{js,ts,tsx,mjs,json,vue,svelte}",
    "lint": "turbo lint",
    "postbuild": "pnpm run size",
    "pw-report": "playwright show-report e2e/report",
    "pw-test-debug": "playwright test --debug",
    "pw-test": "playwright test",
    "react": "pnpm --filter=@headlessplayback/react",
    "release": "pnpm check && changeset version && changeset publish",
    "size": "esno scripts/size-limit.ts",
    "start-docs": "turbo dev --filter=docs...",
    "start-preact": "turbo dev --filter=with-preact...",
    "start-qwik": "turbo dev --filter=with-qwik...",
    "start-react": "turbo dev --filter=with-react...",
    "start-solid": "turbo dev --filter=with-solid...",
    "start-svelte": "turbo dev --filter=with-svelte...",
    "start-vanilla": "turbo dev --filter=with-vanilla...",
    "start-vue": "turbo dev --filter=with-vue...",
    "turbo:update": "pnpx @turbo/codemod update",
    "typecheck": "turbo run typecheck"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "eslint": "^8.41.0",
    "eslint-config-custom": "workspace:*",
    "esno": "^0.16.3",
    "export-size": "^0.5.2",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.0",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "turbo": "^1.9.9",
    "unocss": "^0.52.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.34.3"
  }
}
