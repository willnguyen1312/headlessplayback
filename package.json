  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/willnguyen1312"
  },
  "keywords": [
    "javascript",
    "typescript",
    "video",
    "audio",
    "playback",
    "headless",
    "mobile",
    "desktop"
  ],
  "scripts": {
    "core": "pnpm --filter=@headlessplayback/core",
    "react": "pnpm --filter=@headlessplayback/react",
    "build": "turbo build",
    "start-vanilla": "turbo dev --filter=with-vanilla...",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "format:check": "prettier --check ./**/*.{js,ts,tsx,mjs,json,vue}",
    "format:fix": "prettier --write ./**/*.{js,ts,tsx,mjs,json,vue}",
    "changeset": "changeset",
    "release": "pnpm check && changeset version && changeset publish",
    "check": "turbo run build typecheck lint test --filter=!docs"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.1",
    "eslint": "^8.41.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.0",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "turbo": "^1.9.8",
    "unocss": "^0.51.13"
  }
}
